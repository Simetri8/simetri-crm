rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isOwner(userId);
    }

    // Companies (Business Data - Shared)
    match /companies/{companyId} {
      allow read, write: if isSignedIn();
    }

    // Contacts
    match /contacts/{contactId} {
      allow read, write: if isSignedIn();
    }

    // Deals
    match /deals/{dealId} {
      allow read, write: if isSignedIn();
    }

    // Catalog Items
    match /catalog_items/{itemId} {
      allow read, write: if isSignedIn();
    }

    // Proposals
    match /proposals/{proposalId} {
      allow read, write: if isSignedIn();
    }

    // Work Orders
    match /work_orders/{workOrderId} {
      allow read, write: if isSignedIn();
    }

    // Deliverables
    match /deliverables/{deliverableId} {
      allow read, write: if isSignedIn();
    }

    // Tasks
    match /tasks/{taskId} {
      allow read, write: if isSignedIn();
    }

    // Activities
    match /activities/{activityId} {
      allow read, write: if isSignedIn();
    }

    // Time Entries
    match /time_entries/{entryId} {
      allow read, write: if isSignedIn();
    }

    // Change Requests (Optional/Future)
    match /change_requests/{requestId} {
      allow read, write: if isSignedIn();
    }
  }
}
