rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isRegisteredUser() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Whitelist (admin-managed email list)
    match /whitelist/{email} {
      allow read: if isSignedIn();
      allow write: if isRegisteredUser();
    }

    // Users (UID-based, auto-created on login)
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn()
        && request.auth.uid == userId
        && exists(/databases/$(database)/documents/whitelist/$(request.auth.token.email));
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isRegisteredUser();
    }

    // Companies (Business Data - Shared)
    match /companies/{companyId} {
      allow read, write: if isRegisteredUser();
    }

    // Contacts
    match /contacts/{contactId} {
      allow read, write: if isRegisteredUser();
    }

    // Requests
    match /requests/{requestId} {
      allow read, write: if isRegisteredUser();
    }

    // Deals
    match /deals/{dealId} {
      allow read, write: if isRegisteredUser();
    }

    // Catalog Items
    match /catalog_items/{itemId} {
      allow read, write: if isRegisteredUser();
    }

    // Proposals
    match /proposals/{proposalId} {
      allow read, write: if isRegisteredUser();
    }

    // Work Orders
    match /work_orders/{workOrderId} {
      allow read, write: if isRegisteredUser();
    }

    // Deliverables
    match /deliverables/{deliverableId} {
      allow read, write: if isRegisteredUser();
    }

    // Tasks
    match /tasks/{taskId} {
      allow read, write: if isRegisteredUser();
    }

    // Activities
    match /activities/{activityId} {
      allow read, write: if isRegisteredUser();
    }

    // Time Entries
    match /time_entries/{entryId} {
      allow read, write: if isRegisteredUser();
    }

    // Change Requests (Optional/Future)
    match /change_requests/{requestId} {
      allow read, write: if isRegisteredUser();
    }
  }
}
